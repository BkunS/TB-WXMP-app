<!--index.wxml-->
<view class="fullWidth">
  <view class="header">
    <view class="fullWidth" style="height: {{statusBarHeight}}rpx; background-color: white"></view>
    <view class="header-topNavbar" style="height:{{topNavHeight}}rpx;">
      <view wx:if="{{canNavBack}}" class="header-topNavbar-navWrapper alignStart">
        <navigator open-type="navigateBack" class="header-topNavbar-nav" style="height: 100%">
          <image src="../../assets/back.png" mode="aspectFit" id="backWidth" class=".header-topNavbar-nav-image" bindload="iconLoad" style="width: {{backWidth}}rpx;"></image>
        </navigator>
      </view>
      <view wx:else class="header-topNavbar-navWrapper alignStart">
        <navigator open-type="navigateBack" class="header-topNavbar-nav" style="height: 100%">
          <image src="../../assets/backEmpty.png" mode="aspectFit" id="backWidth" class=".header-topNavbar-nav-image" bindload="iconLoad" style="width: {{backWidth}}rpx;"></image>
        </navigator>
      </view>
      <view class="header-topNavbar-navWrapper" style="text-align: center;">
        <navigator url="/pages/index/index" open-type="reLaunch" class="header-topNavbar-nav" style="height: 100%">
          <image src="../../assets/logo.png" mode="aspectFit" id="logoWidth" class=".header-topNavbar-nav-image" bindload="iconLoad" style="width: {{logoWidth}}rpx"></image>
        </navigator>
      </view>
      <view class="header-topNavbar-navWrapper alignEnd" style="padding: 0 20rpx">
        <image src="../../assets/backEmpty.png" mode="aspectFit" id="backWidth" class=".header-topNavbar-nav-image" bindload="iconLoad" style="width: {{backWidth}}rpx;"></image>
      </view>
    </view>
  </view>
  <view class="placeholder" style="height: {{placeholderHeight}}rpx;">
  </view>
  <view wx:if="{{pageContents.globalMsg}}">
    <image src="{{pageContents.globalMsg}}" mode="widthFix" class="fullWidth" style="margin-bottom: -10rpx"></image>
  </view>

  <view wx:if="{{lookbooks}}" class="fullWidth">
    <view wx:for="{{lookbooks}}" wx:key="id" class="fullWidth">
      <view class="lookbook-item-view">
        <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular
      bindchange="currentChange" current="{{current}}" style="height: {{imgHeights[current]}}rpx;">
          <block wx:for="{{item.images}}" wx:key="{{current}}">
            <swiper-item>
              <image src="{{item}}" class="swiper-image" mode="widthFix" bindload="imageLoad"/>
            </swiper-item>
          </block>
        </swiper>
        <view class="lookbook-title-view"> {{item.title}} </view>
        <view class="lookbook-text-view"> {{item.text}} </view>
        <navigator url="/pages/lookbook/lookbook?id={{item.id}}" class=lookbook-button-view">
          <button class="button lookbook-check-button" hover-class="button-hover" plain>选购礼品</button> 
        </navigator>
      </view>
    </view>
  </view>

  <view class="fullWidth" class="categories-title-view" wx:if="{{categories}}">
    <text> 商品分类 </text>
  </view>
  <view class="fullWidth list-wrapper-view" wx:if="{{categories}}">
    <view wx:for="{{categories}}" wx:key="id" class="fullWidth category-list-view">
      <view class="category-item-view">
        <navigator url="/pages/category/category?id={{item.id}}">
          <image src="{{item.image}}" mode="widthFix"></image>
          <text class="default-font categoryText-font"> {{item.displayName}} </text>
        </navigator>
      </view>
    </view>
  </view>
  
  <view class="fullWidth" wx:if="{{pageContents.heroContents.heroVideo}}">
    <video src="{{pageContents.heroContents.heroVideo}}" autoplay loop muted objectFit="cover" style="width: 100vw"></video>
    <view class="heroText-view">
      <text class="default-font heroText-font">{{pageContents.heroContents.heroText}}</text>
    </view>
  </view>

  <view class="fullWidth">
    <image src="../../assets/email.png" mode="widthFix" class="default-image"></image>
  </view>
</view>
