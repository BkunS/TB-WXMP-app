/**index.wxss**/
.image-view {
  width: 100vw;
  height: auto;
  margin: 0rpx 0;
  padding: 0rpx 0;
}

.globalMsg-view {
  display: flex;
  position: fixed;
  margin: 0 auto;
  z-index: 9999;
  top: 0;
  left: 0; 
  right: 0;
}

.topNav-view {
  display: flex;
  flex-direction: column;
  z-index: 9999;
  margin: 0 auto;
  position: fixed;
  top: 0;
  left: 0; 
  right: 0;
}
.topNav-image {
  z-index: 1;
  width: 100vw;
  left: 0; 
  right: 0;
}

.placeholder-view {
  display: flex;
  flex-direction: column;
  top: 0;
  left: 0;
  right: 0;
  padding: 0;
  margin: 0rpx 0;
}

.heroText-view {
  padding: 15rpx 50rpx; 
  text-align: center; 
  margin-bottom: 50rpx;
}

.heroText-font {
  font-size: 30rpx;
}

.categoryText-font {
  font-size: 25rpx;
  font-weight: 600;
}

.email-image {
  width: 100vw;
  height: 840rpx;
}

.category-list-view {
  width: 50vw;
  float: left;
}

.category-item-view {
  text-align: center;
  margin: 15rpx 15rpx;
  padding-bottom: 30rpx;
}

.category-item-image {
  width: 100%;
}