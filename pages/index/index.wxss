/**index.wxss**/
.image-view {
  width: 100vw;
  height: auto;
  margin: 0rpx 0;
  padding: 0rpx 0;
}

.globalMsg-view {
  height: auto;
  display:inline-block;
  position: static;
}

.topNav-view {
  display: flex;
  z-index: 1;
  position: relative;
  top: 0;
}
.topNav-image {
  height: 140rpx;
  z-index: 1;
}

.email-image {
  width: 100vw;
  height: 840rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}