/* pages/lookbook/lookbook.wxss */

.landing-view {
  height: auto;
}

.filterAndSort-view {
  padding: 30rpx 0;
}

.product-list-view {
  width: calc(50vw - 26rpx);
  float: left;
}

.product-item-view {
  text-align: left;
  margin: 25rpx 25rpx;
  padding-bottom: 30rpx;
}

.nameTag-view {
  line-height: 20rpx;
}

.product-item-image {
  width: 100%;
  top: 0;
  left: 0;
  right: 0;
}

.productText-font {
  font-size: 20rpx;
  font-weight: 500;
}

.price-font {
  font-size: 15rpx;
  font-weight: 400;
}