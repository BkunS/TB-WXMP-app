/* pages/product/product.wxss */

.title-view {
  text-align: center;
  margin-bottom: 25rpx;
}

.title-font {
  font-size: 30rpx;
}

.price-font {
  font-size: 25rpx;
}

.swiper-view {
  height: 800rpx;
}

.ui-radio radio,.ui-radio checkbox {
  display: none;
}
.color-text {
  font-size: 30rpx;
  padding: 0 30rpx;
}

.circle-canvas {
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
}

.picker-view {
  margin: 0 30rpx;
  font-size: 30rpx;
  padding: 20rpx 30rpx;
  border:3rpx solid grey;
  text-align: center;
  vertical-align: middle;
}

.button-view {
  margin: 30rpx 0;
  padding: 0 30rpx;
}

.button {
  margin: 20rpx 0;
}

.addToCart-button {
  color: white; 
  background-color: #0c2340;
}

.buyNow-button {
  color: #0c2340;
}

.button-hover {
  color: grey;
  background-color: black;
}

.description-title-view {
  font-size: 35rpx;
  font-weight: 600;
  padding: 30rpx 0;
}

.description-text-view {
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.description-list-view {
  font-size: 28rpx;
  margin: 10rpx 0;
}