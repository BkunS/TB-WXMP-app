/* pages/profile/profile.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 192rpx;
  height: 192rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.wrapper-view {
  margin-left: 60rpx;
  margin-right: 60rpx;
  margin-top: 150rpx;
  width: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.list-view {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.item-icon-view {
  width: 30%;
  padding: auto;
}

.item-text-view {
  width: 50%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding: 20rpx 20rpx;
}

.icon-view {
  width: 20%;
  display: flex;
  flex-direction: row;
  align-items: center;
}